{
    "browser": true,
    // Var names must be camelCase or UPPER_CASE
    "camelcase": true,
    // Loops and conditionals must have curly brackets
    "curly": true,
    // Allow ES6 features
    "esnext": true,
    // 4 space indent (does not create warnings)
    "indent": 4,
    // Prevent use of undefined variables
    "undef": true,
    // Warn about unused variables
    "unused": true
}